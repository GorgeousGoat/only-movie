{% extends "backoffice.html.twig" %}

{% block body %}

    {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger text-center">
                {{ message }}
            </div>
    {% endfor %}
    
    {{ form(form)}}

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Public</th>
            <th scope="col">Forfait</th>
            <th scope="col">Prix</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for pricing in pricings %}
        <tr class="table-secondary">
            <th scope="row">{{pricing.id}}</th>
            <th>{{pricing.public}}</th>
            <th>{{pricing.forfait}}</th>
            <td>{{pricing.price}}</td>
            <td>
                <a href="{{ path('editPricing', {id: pricing.id} ) }}" class="btn btn-warning" >Modifier</a>
                <a href="{{ path('deletePricing', {id: pricing.id} ) }}" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer ce forfait ?')" class="btn btn-danger" >Supprimer</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>




{% endblock %}